{
  "required":   [
    "position",
    "rotation",
    "scale"
  ],
  "config":   {
    "attachmentId":     {
      "description": "splat file",
      "type": "string",
      "ui:field": "imageUpload",
      "title": "PLY/SPZ"
    },
    "position":     {
      "title": "Position",
      "description": "position info.",
      "type": "string",
      "ui:subscribeTo": "position-updates",
      "default": "{ \"x\":0, \"y\":0, \"z\":0 }"
    },
    "rotation":     {
      "title": "Rotation",
      "description": "rotation info.",
      "type": "string",
      "ui:subscribeTo": "rotation-updates",
      "default": "{ \"x\":0, \"y\":0, \"z\":0 }"
    },
    "scale":     {
      "title": "Scale",
      "description": "scale info.",
      "type": "string",
      "ui:subscribeTo": "scale-updates",
      "default": "{ \"x\":1, \"y\":1, \"z\":1 }"
    },
    "url":     {
      "title": "Url",
      "description": "optional url.",
      "type": "string",
      "default": ""
    }
  },
  "outputs":   {
    "position-updates": {"access": ["public"]},
    "rotation-updates": {"access": ["public"]},
    "scale-updates": {"access": ["public"]}
  },
  "description": "Splats",
  "options": {"icon": false},
  "peerDependencies":   {
    "@sparkjsdev/spark": "0.1.6",
    "react": "18",
    "react-dom": "18",
    "three": "^0.171"
  }
}